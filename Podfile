target 'Weather Forcasting' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Networking
  pod 'Alamofire'

  # Mapper
  pod 'ObjectMapper'
  pod 'SwiftyJSON'

  # UI
  pod 'IQKeyboardManagerSwift'
  pod 'KRProgressHUD'
  pod 'SwiftGifOrigin'

  # Coding Style
  pod 'RxSwift'
  pod 'RxCocoa'
  
  target 'Weather ForcastingTests' do
    inherit! :search_paths
    # Pods for testing
    
    # testing
    pod 'RxTest'
  end

end
